---
import Section from "@atoms/Section.astro";
import { type Lang, useTranslations } from "@/i18n";
import type Work from "@/resume/work/work.model";

// Props interface
interface Props {
	work: Work[];
}

const { work } = Astro.props as Props;
const currentLocale = Astro.params.lang as Lang;
const t = useTranslations(currentLocale);
---

<Section title={t('experience')}>
  <ul>
    {
      work.map(
        (workItem) => {
          const { name, startDate, endDate, position, summary, highlights, url } = workItem;
          
          const startYear = startDate.getFullYear()
          const endYear = endDate ? endDate.getFullYear() : "Actual"
          
          // Convertir fechas a strings para datetime
          const startDateStr = startDate.toISOString().split('T')[0]
          const endDateStr = endDate ? endDate.toISOString().split('T')[0] : null

          return (
            <li>
              <article>
                <header>
                  <div>
                    <h3>
                      {url ? (
                        <a href={url} title={`Ver ${name}`} target="_blank" rel="noopener noreferrer">
                          {name}
                        </a>
                      ) : (
                        <span>{name}</span>
                      )}
                    </h3>
                    <h4>{position}</h4>
                  </div>

                  <div>
                    <time 
                      datetime={startDateStr}
                      data-title={startDateStr}>
                        {startYear}
                    </time>
                    {" - "}
                    <time 
                      datetime={endDateStr}
                      data-title={endDateStr}>
                        {endYear}
                    </time>
                  </div>
                </header>

                <footer>
                  <p>{summary}</p>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #1a202c;
  }

  article a {
    color: #1a202c;
  }

  article a:hover,
  article a:focus {
    text-decoration: underline;
    color: #2d3748;
  }

  article h4 {
    color: #2d3748;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #4a5568;
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
  }

  [data-title]:hover:after {
    opacity: 1;
    transition: all 0.1s ease-in-out 0.5s;
    visibility: visible;
  }

  [data-title]:after {
    content: attr(data-title);
    background-color: #333;
    color: #fff;
    font-size: .75rem;
    font-family: Menlo, Monaco, Lucida Console, "Courier New", monospace;;
    position: absolute;
    padding: .2rem .5rem;
    bottom: -1.4rem;
    left: 50%;
    white-space: nowrap;
    box-shadow: 1px 1px 1px #222222;
    opacity: 0;
    border: 1px solid #111111;
    z-index: 99999;
    visibility: hidden;
    border-radius: 6px;
  }

  [data-title] {
    position: relative;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
