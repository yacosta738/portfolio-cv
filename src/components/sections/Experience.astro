---
import Section from "@atoms/Section.astro";
import { type Lang, useTranslations } from "@/i18n";
import type Work from "@/resume/work/work.model";

// Props interface
interface Props {
	work: Work[];
}

const { work } = Astro.props as Props;
const currentLocale = Astro.params.lang as Lang;
const t = useTranslations(currentLocale);

// Small helper: normalize various date inputs into a valid Date or null
const toSafeDate = (v: unknown): Date | null => {
	if (!v) return null;
	if (v instanceof Date) return Number.isFinite(v.getTime()) ? v : null;
	const d = new Date(String(v));
	return Number.isFinite(d.getTime()) ? d : null;
};
---

<Section title={t('experience')}>
  <ul class="flex flex-col gap-8">
    {
      work.map(
        (workItem) => {
          const { name, startDate, endDate, position, summary, highlights, url } = workItem;

          const sDate = toSafeDate(startDate as unknown);
          const eDate = toSafeDate(endDate as unknown);

          const startYear = sDate ? sDate.getFullYear() : "-";
          const endYear = eDate ? eDate.getFullYear() : (endDate ? String(endDate) : "Actual");

          // Convertir fechas a strings para datetime (only when valid)
          const startDateStr = sDate ? sDate.toISOString().split('T')[0] : null;
          const endDateStr = eDate ? eDate.toISOString().split('T')[0] : null;

          return (
            <li>
              <article>
                <header class="flex justify-between items-start mb-1">
                  <div>
                    <h3 class="font-medium text-gray-900">
                      {url ? (
                        <a href={url} title={`Ver ${name}`} target="_blank" rel="noopener noreferrer" class="text-gray-900 hover:underline focus:underline hover:text-gray-700">
                          {name}
                        </a>
                      ) : (
                        <span>{name}</span>
                      )}
                    </h3>
                    <h4 class="text-gray-700 font-normal">{position}</h4>
                  </div>

                  <div>
                    <time 
                      datetime={startDateStr}
                      data-title={startDateStr}
                      class="text-gray-600 text-sm min-w-[102px] cursor-default sm:text-right relative tooltip-trigger">
                        {startYear}
                    </time>
                    {" - "}
                    <time 
                      datetime={endDateStr}
                      data-title={endDateStr}
                      class="text-gray-600 text-sm min-w-[102px] cursor-default sm:text-right relative tooltip-trigger">
                        {endYear}
                    </time>
                  </div>
                </header>

                <footer>
                  <p>{summary}</p>
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

