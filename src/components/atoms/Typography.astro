---
import { cn } from "@/lib/utils";

export interface Props {
	as?: "h1" | "h2" | "h3" | "h4" | "p" | "span" | "time";
	variant?: "title" | "subtitle" | "body" | "small" | "muted" | "date";
	class?: string;
}

type Variant = NonNullable<Props["variant"]>;

const {
	as: Element = "p",
	variant = "body",
	class: className,
	...rest
} = Astro.props as Props;

const variantStyles: Record<Variant, string> = {
	title: "text-4xl font-normal text-gray-900 my-4 dark:text-gray-100",
	subtitle: "text-lg font-medium text-gray-700 my-6 dark:text-gray-300",
	body: "text-sm leading-6 text-gray-600 dark:text-gray-400",
	small: "text-xs leading-5 text-gray-600 dark:text-gray-400",
	muted: "text-sm text-gray-500 dark:text-gray-400",
	date: "text-sm text-gray-600 min-w-[102px] cursor-default dark:text-gray-400",
};

const classes = cn(
	"my-2 last:mb-0",
	variantStyles[variant as Variant],
	className,
);
---

<Element class={classes} {...rest}>
	<slot />
</Element>
