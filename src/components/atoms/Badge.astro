---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils";

export interface Props extends HTMLAttributes<"span"> {
	variant?: "primary" | "secondary" | "accent";
	size?: "sm" | "md" | "lg";
	class?: string;
}

const {
	variant = "primary",
	size = "md",
	class: className,
	...attrs
} = Astro.props;

const baseStyles = {
	primary:
		"bg-gray-100 text-gray-800 border border-gray-300 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600",
	secondary:
		"bg-blue-50 text-blue-800 border border-blue-200 dark:bg-blue-900 dark:text-blue-300 dark:border-blue-700",
	accent:
		"bg-green-50 text-green-800 border border-green-200 dark:bg-green-900 dark:text-green-300 dark:border-green-700",
};

const sizeStyles = {
	sm: "px-2 py-1 text-xs",
	md: "px-2.5 py-1 text-xs",
	lg: "px-3 py-1.5 text-sm",
};

const classes = cn(
	"inline-flex items-center gap-1 rounded-md font-medium",
	baseStyles[variant],
	sizeStyles[size],
	className,
);
---

<span class={classes} {...attrs}>
	<slot />
</span>
